<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:padding="5dip">

    <TableRow android:layout_width="match_parent">
        <TextView android:text="@string/labelName"
            android:layout_marginLeft="5dip" />
        
        <EditText android:id="@+id/employeeName" 
            android:layout_width="match_parent"
            android:inputType="text"/>
    </TableRow>
    
    <TableRow android:layout_width="match_parent">
        <TextView android:text="@string/labelSurname"
            android:layout_marginLeft="5dip" />
        
        <EditText android:id="@+id/employeeSurname" 
            android:layout_width="match_parent"
            android:inputType="text"/>
    </TableRow>
    
    <TableRow android:layout_width="match_parent">
        <TextView android:text="@string/labelEmail"
            android:layout_marginLeft="5dip" />
        
        <EditText android:id="@+id/employeeEmail" 
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"/>
    </TableRow>
    
    <TableRow android:layout_width="match_parent">
        <TextView android:text="@string/labelBirthday"
            android:layout_marginLeft="5dip" />
        
        <EditText android:id="@+id/employeeBirthday" 
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="date"/>
    </TableRow>
    
    <TableRow android:layout_width="match_parent">
        <TextView android:text="@string/labelActive"
            android:layout_marginLeft="5dip" />
        
        <CheckBox android:id="@+id/employeeActive"/>
    </TableRow>
    
    <TableRow android:layout_width="match_parent" android:gravity="right">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDelete"
            android:onClick="executeDeleteCommand" />
        
		<Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSave"
            android:onClick="executeSaveCommand"/>
    </TableRow>
     
</TableLayout>